@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-dark">
                    <i class="glyphicon glyphicon-search">  </i>
                    Search
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>   @restaurant.Name </td>
            <td>   @restaurant.Location </td>
            <td>   @restaurant.Cuisine </td>
            <td>
                <a asp-page="./Detail" asp-route-restaurantId="@restaurant.Id" class="btn btn-link">View</a>
                <a asp-page="./Edit" asp-route-restaurantId="@restaurant.Id" class="btn btn-warning">Edit</a>
            </td>
        </tr>
    }
</table>

<div>  @Model.Message </div>

<a asp-page="./Edit" class="btn btn-dark">Add new</a>